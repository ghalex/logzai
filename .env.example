# LogzAI Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# JWT Secret Key for token validation (REQUIRED)
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY="your-secret-key-here"

# Collector API Key for internal communication (REQUIRED)
# Generate with: openssl rand -hex 16
COLLECTOR_API_KEY="your-collector-api-key"

# PostgreSQL Database URL (REQUIRED)
# Format: postgresql://username:password@host:port/database
PG_DATABASE_URL="postgresql://logzai:logzai@localhost:5432/logzai"

# =============================================================================
# AI CONFIGURATION (OPTIONAL)
# =============================================================================
# Configure AI providers in app settings after installation
# Leave empty if you want to configure later through the UI

# Azure OpenAI endpoint URL
AZURE_OPENAI_ENDPOINT=""

# OpenAI API key for AI features
OPENAI_API_KEY=""

# OpenAI API type (openai or azure)
OPENAI_API_TYPE="openai"

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Demo organization ID for testing (optional)
DEMO_ORGANIZATION_ID=1

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Local storage path for log data
LOCAL_PATH="./data/orgs"

# Use S3 for storage (True/False)
# Set to True to store logs in S3 instead of local filesystem
USE_S3=False

# =============================================================================
# S3 CONFIGURATION (only required if USE_S3=True)
# =============================================================================

# S3 endpoint URL (leave empty for AWS, specify for S3-compatible services)
S3_ENDPOINT=""

# S3 bucket name where logs will be stored
S3_BUCKET=""

# S3 access credentials
S3_ACCESS_KEY=""
S3_SECRET_KEY=""

# S3 region (e.g., us-east-1, eu-west-1)
S3_REGION=""

# S3 path prefix for organizing logs
S3_PATH=""

# =============================================================================
# CELERY/REDIS CONFIGURATION
# =============================================================================

# Flower monitoring UI credentials (format: username:password)
FLOWER_BASIC_AUTH="admin:password"

# Redis broker URL for Celery task queue
CELERY_BROKER_URL=redis://redis:6379/0

# Redis backend URL for Celery results
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Celery logging level (debug, info, warning, error, critical)
CELERY_LOG_LEVEL=info

# Number of concurrent Celery workers
CELERY_CONCURRENCY=2

# Celery queue names (comma-separated)
CELERY_QUEUES=default,logs,ai

# Celery worker process name
CELERY_WORKER_NAME=logzai-worker

